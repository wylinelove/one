urcesContent":["<template>\r\n    <div>\r\n        <div>\r\n            全选<input type=\"checkbox\" @change=\"selectAll\" v-model=\"allcb\">\r\n        </div>\r\n        <div class=\"cart-item\" v-for=\"(item,i) of list\" :key=\"i\">\r\n         <div class=\"leftText\">\r\n             <input type=\"checkbox\" v-model=\"item.cb\" @change=\"itemchange\">\r\n             <div class=\"lname\">\r\n                 {{item.lname}}\r\n             </div>\r\n             <div class=\"price\">\r\n                 {{item.price}}\r\n             </div>\r\n         </div>\r\n         <mt-button :data-id=\"item.id\" @click=\"del\">删除</mt-button>\r\n        </div>\r\n        <div>\r\n            购物车中的商品数量\r\n            <span style=\"color:red\">{{$store.getters.getCart}}</span>\r\n            <mt-button @click=\"delm\">删除选中商品</mt-button>\r\n        </div>\r\n    </div>\r\n</template>\r\n<script>\r\nexport default {\r\n    data(){\r\n     return{\r\n         list:[],\r\n         allcb:false\r\n     }\r\n    },\r\n    created(){\r\n    this.loadMore();\r\n    },\r\n    methods:{\r\n        itemchange(){\r\n            var sum= 0;\r\n            for(var item of this.list){\r\n                if(item.cb){\r\n                    sum++;\r\n                }\r\n            }\r\n            if(sum==this.list.length){\r\n                this.allcb = true\r\n            }else{\r\n                this.allcb = false;\r\n            }\r\n        },\r\n        delm(){\r\n          this.$messagebox.confirm(\"是否删除指定商品\").then(res=>{\r\n            //   创建空字符串保存数据\r\n              var str = \"\";\r\n              for(var item of this.list){\r\n                  if(item.cb){\r\n                      str +=item.id+\",\"\r\n                  }\r\n              }\r\n            //   判断用户是否选中商品\r\n              if(str.length==0){\r\n                  this.$messagebox(\"请选择要删除商品\");\r\n                  return;\r\n              }\r\n              //0起始下标   str.length-1保存几个字符\r\n              str = str.substring(0,str.length-1);\r\n              console.log(str);\r\n              var url = \"delm\";\r\n              var obj={id:str};\r\n              //发送ajas请求\r\n              this.axios.get(url,{params:obj}).then(res=>{\r\n                  this.loadMore();\r\n                  this.$toast(\"删除成功\")\r\n              })\r\n          }).catch(err=>{\r\n\r\n          })\r\n        },\r\n        selectAll(event){\r\n            var all= event.target.checked;\r\n            for(var item of this.list){\r\n                item.cb = all;\r\n            }\r\n        },\r\n       del(event){\r\n           this.$messagebox.confirm(\"是否删除指定商品\").then(res=>{\r\n           var id= event.target.dataset.id;\r\n           console.log(id);\r\n           var url= \"del\";\r\n           var obj = {id};\r\n           this.axios.get(url,{params:obj}).then(res=>{\r\n               console.log(res);\r\n               if(res.data.code>0){\r\n                   this.$toast(\"删除成功\");\r\n                   this.loadMore();\r\n               }\r\n               })\r\n            }).catch(err=>{\r\n\r\n            })\r\n       },\r\n       loadMore(){\r\n           var url=\"findcart\"\r\n           this.axios.get(url).then(res=>{\r\n               console.log(res.data.code);\r\n               if(res.data.code==-1){\r\n                   this.$messagebox(\"消息\",\"请登录\").then(res=>{\r\n                       this.$router.push(\"/Login\");\r\n                   })\r\n               }else{\r\n                   var list = res.data.data;\r\n                   for(var item of list){\r\n                       item.cb = false;\r\n                   }\r\n                   this.list=list;\r\n                //    创建循环修改购物车数量\r\n                this.$store.commit(\"clearCart\");\r\n                for(var item of this.list){\r\n                   this.$store.commit(\"addCart\");\r\n                }\r\n               }\r\n           })\r\n       },\r\n    }\r\n}\r\n</script>\r\n<style>\r\n.cart-item{\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n    border-bottom: 1px solid #ccc;\r\n    margin-top: 25px;\r\n}\r\n.leftText{\r\n    display: flex;\r\n    align-items: center;\r\n}\r\n.lname{\r\n    margin-left: 25px;\r\n    color: #333;\r\n}\r\n.price{\r\n    margin-left: 25px;\r\n    color: red;\r\n}\r\n</style>\r\n\r\n"]}]}